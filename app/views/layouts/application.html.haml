!!!
%html
  %head
    %title Adeca
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
  %body
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=517128471735350";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    = render 'layouts/header'
    = render 'shared/hero_container' if current_page?(root_path)
    = render 'shared/find_us_gmap' if controller?('static_pages') && action?('index') && params[:static_page] == 'contact_us'
    #layout.container
      = yield
    = render 'layouts/footer'
